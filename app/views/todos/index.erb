
<h1>Welcome To <%=@user.username%>'s ToDo List </h1>

<% if flash.has?(:message) %>
  <h2><%= flash[:message] %></h2>
<% end %>

<%@todos.each do |todo|%>
</br>
  <p> <%=todo.content%> </p>
  
  <form action="/todos/<%= todo.id %>/edit" method="get" >
    <input type="submit" value="Edit Todo">
  </Form>
  
  <form action="/todos/<%= todo.id %>/delete" method="post" >
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete ToDo">
  </Form>
<br>
<%end%>

<form action="/todos/new" method="get">
  <input type="submit" value="Create New Todo">
</Form>
<form action="/users/logout" method="get">
  <input type="submit" value="LogOut">
</Form>
